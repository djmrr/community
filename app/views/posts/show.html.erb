<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>
 
<p>
  <strong>Author:</strong>
  <%= @post.author %>
</p>


<p>
  <strong>Body:</strong>
  <%= @post.body %>
</p>
 
<h2>Comments</h2>
<% @post.comments.each do |comment| %>

	<p>
		<strong>Author:</strong> <%= comment.author %>
		<strong>Comment:</strong> <%= comment.body %>
	</p>

<% end %>
 
<h2>Add a comment:</h2>
<%= render 'comments/form' %>

  <%= link_to 'Back', posts_path %>
  <%= link_to 'Edit', edit_post_path(@post) %>
